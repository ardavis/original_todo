%tr.todo
  %td
    = link_to todo.title, [todo.list, todo]
  %td
    - if todo.completed?
      Completed at: #{todo.completed_at}
  %td.pull-right
    = complete_or_reopen_button(todo)
    = link_to [:edit, todo.list, todo], class: 'btn btn-primary' do
      %span.glyphicon.glyphicon-pencil
    = link_to [todo.list, todo], method: :delete, data: { confirm: 'Are you sure you want to delete this?' }, class: 'btn btn-danger' do
      %span.glyphicon.glyphicon-trash